<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.singh.aakash.dbconnector" >

    <uses-permission android:name="android.permission.INTERNET" />

    <!--
     To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" /> <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" /> <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LogIn"
            android:label="Log In" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Category_intent"
            android:label="@string/title_activity_category_intent" >
        </activity>
        <activity
            android:name=".Products_List"
            android:label="@string/title_activity_products__list" >
        </activity>
        <activity
            android:name=".Advertisements"
            android:label="@string/title_activity_advertisements" >
        </activity>
        <activity
            android:name=".AdsIntent"
            android:label="@string/title_activity_ads_intent" >
        </activity>
        <activity
            android:name=".Category_Add"
            android:label="@string/title_activity_category__add" >
        </activity>
        <activity
            android:name=".Category_List"
            android:label="@string/title_activity_category__list" >
        </activity>
        <activity
            android:name=".AddaProduct"
            android:label="@string/title_activity_adda_product" >
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".MainActivity"
            android:label="E-Local Seller" >
        </activity>
    </application>

</manifest>
